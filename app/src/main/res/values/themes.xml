<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NintendoAmiibos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nintendo_red</item>
        <item name="colorPrimaryVariant">@color/nintendo_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="TextAppearance.AmiiboInfo" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/joycon_button_grey</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>



    <style name="Theme.NintendoAmiibos" parent="Base.Theme.NintendoAmiibos" />
</resources>